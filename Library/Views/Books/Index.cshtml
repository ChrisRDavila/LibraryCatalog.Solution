@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>Books for @User.Identity.Name</h1>

<form asp-controller="Books" asp-action="Index">
  <p>
    Search By Title: <input type="text" name="SearchString" />
    <input type="submit" value="Filter">
  </p>
</form>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Book book in Model)
    {
      <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new book", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
